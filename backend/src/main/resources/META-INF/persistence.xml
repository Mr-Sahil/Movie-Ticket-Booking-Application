<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="ticketPU" transaction-type="JTA">
    <jta-data-source>jdbc/ticketdb</jta-data-source>
    <class>com.example.booking.entities.User</class>
    <class>com.example.booking.entities.Movie</class>
    <class>com.example.booking.entities.Screen</class>
    <class>com.example.booking.entities.Show</class>
    <class>com.example.booking.entities.Seat</class>
    <class>com.example.booking.entities.ShowSeat</class>
    <class>com.example.booking.entities.Booking</class>
    <class>com.example.booking.entities.BookingItem</class>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
